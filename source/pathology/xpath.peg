grammar Pathology.XPath
  
  location_path     <- location_step+ <Pathology.LocationPath>
  
  location_step     <- axis node_test <Pathology.LocationStep>
  
  axis              <- "/" axis_name <Pathology.Axis>
  
  axis_name         <- [a-z\-]+ "::" / axis_shorthand
  
  axis_shorthand    <- "@" / ".." / "." / ""
  
  node_test         <- node_name <Pathology.NodeTest>
  
  node_name         <- [A-Za-z0-9\-]+
  
  
